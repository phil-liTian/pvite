{
  "name": "pvite",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "bin": {
    "pvite": "bin/pvite.js"
  },
  "scripts": {
    "build": "premove dist && pnpm build-bundle && pnpm build-types",
    "build-bundle": "rolldown --config rolldown.config.ts",
    "build-types": "pnpm build-types-roll && pnpm build-types-check",
    "build-types-roll": "rolldown --config rolldown.dts.config.ts",
    "build-types-check": "tsc -p tsconfig.check.json",
    "dev:build": "pnpm build && node -e \"console.log('âœ… Build completed at', new Date().toLocaleTimeString()); setTimeout(() => process.exit(0), 1000);\"",
    "watch:build": "nodemon --watch src --ext ts,js --exec 'pnpm dev:build'"
  },
  "exports": {
    ".": "./dist/node/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "premove": "^4.0.0",
    "rolldown": "1.0.0-beta.50"
  },
  "devDependencies": {
    "@types/node": "^20.19.25"
  }
}
